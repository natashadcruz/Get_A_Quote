<loginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 15, 15
            spacing: 20, 20
            Label:
                text:"User Login"
                font_size: '20sp'
            TextInput:
                id: username
                hint_text:"Username"
            TextInput:
                id: password
                password: True
                hint_text:"Password"
            RelativeLayout:
                Button:
                    text:"Login"                
                    on_press: root.login(root.ids.username.text, root.ids.password.text)
                    size_hint: 0.3, 0.5
                    pos_hint: {'center_x':0.5, 'center_y':0.6}
            Label:
                id: login_wrong
                text:""
        GridLayout:
            cols: 2
            size_hint:0.2, 0.2
            padding:10, 10
            spacing: 10, 0
            Button:
                text:"Forgot Password"
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
                on_press: root.change_pwd()
            Button:
                text:"Sign Up"
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
                on_press: root.sign_up()

<SignUpScreen>:
    GridLayout:
        cols: 1
        padding: 20, 20
        spacing: 10, 10
        Label:
            text:"Sign up for space journey!"
        TextInput:
            id: username
            hint_text:"Username"
        TextInput:
            id: password
            hint_text:"Password"
        GridLayout:
            cols: 2
            RelativeLayout:
                Button:
                    text:"Back"                
                    on_press: root.go_to_login()
                    size_hint: 0.3, 0.5
            RelativeLayout:
                Button:
                    text:"Submit"
                    size_hint: 0.3, 0.5
                    on_press: root.addUser(root.ids.username.text, root.ids.password.text)

<SignUpScreenSuccess>:
    GridLayout:
        cols: 1		
        padding: 20, 20
        spacing: 10, 10
        Label:
            text: "Sign up successful!"
        Button:
            text:"Login Page"
            on_press: root.redirect_login()
        

<LoginScreenSuccess>:
    GridLayout:
        cols: 1
        padding: 30, 30
        spacing: 30, 30
        GridLayout:
            cols: 2
            RelativeLayout:
                Label:
                    text: "Hello,"
                    size_hint: 0.35, 0.35
                    pos_hint: {'center_x': 0.8, 'center_y':0.93}
            RelativeLayout:    
                ImageButton:
                    on_press: root.logout()
                    source: 'logout_hover.png' if self.hovered else 'logout_nothover.png'
                    size_hint: 0.35, 0.35
                    pos_hint: {'center_x': 0.93, 'center_y':0.8}
        Label:
            text: "How do you feel?"
        TextInput:
            id: feeling
            hint_text:"Things to try: happy, sad, unloved, inspired"
        Button:
            text:"Get Me a quote"
            on_press: root.get_quote(root.ids.feeling.text)
        ScrollView:
            Label:
                id: quote
                text:""
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]


<ChangePassword>:
	GridLayout:
		cols: 1		
        padding: 30, 30
        spacing: 30, 30
		Label:
			text: "Change Password"
		TextInput:
			id:username
			hint_text: "Type Username"
		TextInput:
			id: password
			hint_text: "New Password"
			password: True
		Label:
			id: message
			text:""
		GridLayout:
            cols: 2
            RelativeLayout:
    			Button:
    				text: "Change Password"
    				size_hint: 0.3, 0.5
    				on_press: root.change_pwd(root.ids.username.text, root.ids.password.text)
            RelativeLayout:
                Button:
                    text:"Back"
                    size_hint: 0.3, 0.5
                    on_press: root.go_to_login()


<ChangePasswordSuccess>:
    GridLayout:
        cols: 1		
        padding: 20, 20
        spacing: 10, 10
        Label:
            text: "Password Changed Successfully!"
        RelativeLayout:
            Button:
                size_hint: 0.3, 0.5
                pos_hint: {'center_x':0.5, 'center_y':0.6}
                text:"Login Page"
                on_press: root.redirect_login()


<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpScreenSuccess:
        name:"sign_up_screen_success"
    LoginScreenSuccess:
        name:"login_screen_success"
	ChangePassword:
		name: "change_password"
	ChangePasswordSuccess:
		name: "change_password_success"